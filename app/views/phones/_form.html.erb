<%= form_with(model: phone, html: { multipart: true }) do |form| %>

  <% if phone.errors.any? %>
    <div id="error_explanation" class="danger">
      <h5><%= pluralize(phone.errors.count, "error") %> prohibited this phone from being saved:</h5>
      <ul>
        <% phone.errors.each do |error| %>
          <li><small><%= error.full_message %></small></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :model_title %>
    <%= form.text_field :model_title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :model_overview %>
    <%= form.text_field :model_overview, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <div class="mb-3">
      <%= form.label :images, class: 'form-label mb-3' %><br>
      <%= form.file_field :images, type: 'file', multiple: true, class: 'form-control' %>
      <% if phone.images? %>
        <% phone.images_cache.each do |image_cache| %>
          <%= form.hidden_field :image_cache %>
        <% end %>
      <% end %>
    </div>

    <div class="mt-3 mb-3">
      <% if phone.images? %>
        <% phone.images.each do |image| %>
          <%= image_tag(phone.image.url, width: '200') %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="mt-3 mb-3">
    <%= form.submit class: 'btn btn-sm btn-success' %>
  </div>
<% end %>
