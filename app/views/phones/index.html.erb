<div class="card shadow p-4 col-10">

  <h4>Phones</h4>

  <table class="table">
    <thead>
      <tr>
        <th>Model title</th>
        <th>Images</th>
        <th>Overview</th>
        <th colspan="3">Controls</th>
      </tr>
    </thead>

    <tbody>
      <% @phones.each do |phone| %>
        <tr>
          <td><%= phone.model_title %></td>
          <td>
            <% phone.images.each do |image| %>
              <%= image_tag(image.url, width: '30', class: 'rounded') %>
            <% end %>
          </td>
          <td><%= phone.model_overview %></td>
          <td><%= link_to 'Show', phone %></td>
          <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
          <td><%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Phone', new_phone_path, class: 'text-decoration-none' %>
</div>
