<div class="card shadow p-4 col-6">

  <h4>Articles</h4>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3">Controls</th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Article', new_article_path, class: 'text-decoration-none' %>
</div>
