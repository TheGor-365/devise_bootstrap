<div class="edit-page pt-5 pb-5">

  <div class="container">
    <div class="row">
      <div class="col-6">
        <div class="card p-5">
          <h5 class="mb-5">Edit <%= resource_name.to_s.humanize %></h5>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="mb-3">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :username %>
              <%= f.text_field :username, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <div class="mb-3">
                <%= f.label :avatar, class: 'form-label mb-3' %><br>
                <%= f.file_field :avatar, type: 'file', class: 'form-control' %>
                <%= f.hidden_field :avatar_cache %>
              </div>

              <div class="mt-3 mb-3">
                <%= image_tag(resource.avatar.url, width: '200') if resource.avatar? %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label 'New password' %> <small class="text-muted">(leave blank if you don't want to change it)</small>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
              <% if @minimum_password_length %>
                <small class="text-muted"><%= @minimum_password_length %> characters minimum</small>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label 'New password confirmation' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label 'Add your current password to confirm changes' %><br> <small class="text-muted">(we need your current password to confirm your changes)</small>
              <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.submit "Update", class: 'btn btn-success btn-sm' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-6">
        <div class="card p-5">
          <small><%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'text-decoration-none text-danger' %></small>
        </div>
      </div>
    </div>
  </div>

</div>
