<div class="card shadow p-4 col-6">

  <h4>Repairs</h4>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3">Controls</th>
      </tr>
    </thead>

    <tbody>
      <% @repairs.each do |repair| %>
      <tr>
        <td><%= repair.title %></td>
        <td><%= repair.description %></td>
        <td><%= link_to 'Show', repair %></td>
        <td><%= link_to 'Edit', edit_repair_path(repair) %></td>
        <td><%= link_to 'Destroy', repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Repair', new_repair_path, class: 'text-decoration-none' %>
</div>
