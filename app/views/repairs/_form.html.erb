<%= form_with(model: repair) do |form| %>

  <% if repair.errors.any? %>
    <div id="error_explanation" class="danger">
      <h5><%= pluralize(repair.errors.count, "error") %> prohibited this repair from being saved:</h5>
      <ul>
        <% repair.errors.each do |error| %>
          <li><small><%= error.full_message %></small></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :spare_part %>
    <%= form.text_field :spare_part, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :overview %>
    <%= form.text_field :overview, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <div class="mb-3">
      <%= form.label :images, class: 'form-label mb-3' %><br>
      <%= form.file_field :images, type: 'file', multiple: true, class: 'form-control' %>
      <%= form.hidden_field :images_cache %>
    </div>

    <div class="mt-3 mb-3">
      <%= image_tag(repair.images.url, width: '200') if repair.images? %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :videos %>
    <%= form.text_field :videos, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :price %>
    <%= form.text_field :price, class: 'form-control' %>
  </div>

  <div class="mt-3 mb-3">
    <%= form.submit class: 'btn btn-sm btn-success' %>
  </div>
<% end %>
