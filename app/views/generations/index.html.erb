<div class="card shadow p-4 col-6">
  
  <h4>Generations</h4>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3">Controls</th>
      </tr>
    </thead>

    <tbody>
      <% @generations.each do |generation| %>
      <tr>
        <td><%= generation.title %></td>
        <td><%= link_to 'Show', generation %></td>
        <td><%= link_to 'Edit', edit_generation_path(generation) %></td>
        <td><%= link_to 'Destroy', generation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Generation', new_generation_path, class: 'text-decoration-none' %>
</div>
