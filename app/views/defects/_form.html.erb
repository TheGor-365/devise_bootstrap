<%= form_with(model: defect) do |form| %>

  <% if defect.errors.any? %>
    <div id="error_explanation" class="danger">
      <h5><%= pluralize(defect.errors.count, "error") %> prohibited this defect from being saved:</h5>
      <ul>
        <% defect.errors.each do |error| %>
          <li><small><%= error.full_message %></small></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3 card shadow mt-5 p-5 col-10">
    <%= form.label :modules %>
    <%= form.text_field :modules, class: 'form-control' %>
  </div>

  <div class="mb-3 card shadow mt-5 p-5 col-10">
    <%= form.label :generation %>
    <%= form.text_field :generation, class: 'form-control' %>
  </div>

  <div class="mb-3 card shadow mt-5 p-5 col-10">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: 'form-control' %>
  </div>

  <div class="mb-3 card shadow mt-5 p-5 col-10">
    <%= form.label :description %><br>
    <%= form.rich_text_area :content, class: 'form-control' %>
  </div>

  <div class="mb-3 card shadow mt-5 p-5 col-10">
    <div class="mb-3">
      <%= form.label "Change #{defect.modules} images", class: 'form-label mb-3' %><br>
      <%= form.file_field :images, type: 'file', multiple: true, class: 'form-control' %>

      <% if defect.images_cache.present? %>
        <% defect.images_cache.each do |image_cache| %>
          <%= form.hidden_field :images_cache %>
        <% end %>
      <% end %>
    </div>

    <div class="mt-3 mb-3">
      <% if defect.images? %>
        <% defect.images.each do |image| %>
          <%= image_tag(image.url, width: '100') %>
        <% end %>
      <% end %>
    </div>
  </div>

  <% if defect.images.size > 0 %>
    <div class="mb-3 card shadow mt-5 p-5 col-10">
      <%= form.label "Add more images for #{defect.modules}", class: 'form-label mb-3' %><br>
      <%= form.file_field :images, multiple: true, class: 'form-control' %>

      <div class="mt-3 mb-3">
        <% if defect.images? %>
          <% defect.images.each do |image| %>
            <%= image_tag(image.url, width: '100') %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="mb-3 card shadow mt-5 p-5 col-10">
    <%= form.label "Change #{defect.modules} videos", class: 'form-label mb-3' %><br>
    <%= form.file_field :videos, multiple: true, type: 'file', class: 'form-control' %>

    <div class="mt-5">
      <% if defect.videos? %>
        <%= video_tag(defect.videos, width: '340', height: '180', controls: true, class: 'rounded card p-1 shadow mx-auto mb-5') %>
      <% end %>
    </div>
  </div>

  <div class="mt-5 mb-3">
    <%= form.submit class: 'btn btn-sm btn-success' %>
  </div>
<% end %>
