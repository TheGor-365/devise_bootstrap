<%= form_with(model: defect) do |form| %>

  <% if defect.errors.any? %>
    <div id="error_explanation" class="danger">
      <h5><%= pluralize(defect.errors.count, "error") %> prohibited this defect from being saved:</h5>
      <ul>
        <% defect.errors.each do |error| %>
          <li><small><%= error.full_message %></small></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3 card shadow mt-5 p-5 col-10">
    <%= form.label :generation %><br>

    <div class="form-check">
      <%= form.radio_button(:generation_id, '1', class: 'form-check-input') %>
      <%= form.label :generation_5 %>
    </div>

    <div class="form-check">
      <%= form.radio_button(:generation_id, '2', class: 'form-check-input') %>
      <%= form.label :generation_6 %>
    </div>
  </div>

  <div class="mb-3 card shadow mt-5 p-5 col-10">
    <%= form.label :iphone_model %><br>

    <div class="form-check">
      <%= form.radio_button(:phone_id, '1', class: 'form-check-input') %>
      <%= form.label 'iphone 5' %>
    </div>

    <div class="form-check">
      <%= form.radio_button(:phone_id, '2', class: 'form-check-input') %>
      <%= form.label 'iphone 5s' %>
    </div>

    <div class="form-check">
      <%= form.radio_button(:phone_id, '3', class: 'form-check-input') %>
      <%= form.label 'iphone SE' %>
    </div>
  </div>

  <div class="mb-3 card shadow mt-5 p-5 col-10">
    <%= form.label :defect_modules %>
    <%#= form.text_field :modules, class: 'form-control' %>

    <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
      <%= form.check_box(defect: { modules: [] }, class: 'btn-check', id: 'modules') %>
      <%= form.label @defect.modules, for: 'modules', class: 'btn btn-outline-primary' %>
    </div><br>

    <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
      <input type="checkbox" class="btn-check" id="btncheck1" autocomplete="off">
      <label class="btn btn-outline-primary" for="btncheck1">Checkbox 1</label>

      <input type="checkbox" class="btn-check" id="btncheck2" autocomplete="off">
      <label class="btn btn-outline-primary" for="btncheck2">Checkbox 2</label>

      <input type="checkbox" class="btn-check" id="btncheck3" autocomplete="off">
      <label class="btn btn-outline-primary" for="btncheck3">Checkbox 3</label>
    </div>
  </div>

  <div class="mb-3 card shadow mt-5 p-5 col-10">
    <%= form.label :defect_description %><br>
    <%= form.rich_text_area :description, class: 'form-control' %>
  </div>

  <div class="mb-3 card shadow mt-5 p-5 col-10">
    <div class="mb-3">
      <%= form.label "Change iphone modules images", class: 'form-label mb-3' %><br>
      <%= form.file_field :images, type: 'file', multiple: true, class: 'form-control' %>

      <% if defect.images_cache.present? %>
        <% defect.images_cache.each do |image_cache| %>
          <%= form.hidden_field :images_cache %>
        <% end %>
      <% end %>
    </div>

    <div class="mt-3 mb-3">
      <% if defect.images? %>
        <% defect.images.each do |image| %>
          <%= image_tag(image.url, width: '100') %>
        <% end %>
      <% end %>
    </div>
  </div>

  <% if defect.images.size > 0 %>
    <div class="mb-3 card shadow mt-5 p-5 col-10">
      <%= form.label "Add more images for iphone modules", class: 'form-label mb-3' %><br>
      <%= form.file_field :images, multiple: true, class: 'form-control' %>

      <div class="mt-3 mb-3">
        <% if defect.images? %>
          <% defect.images.each do |image| %>
            <%= image_tag(image.url, width: '100') %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="mb-3 card shadow mt-5 p-5 col-10">
    <%= form.label "Change ipnone defect videos", class: 'form-label mb-3' %><br>
    <%= form.file_field :videos, multiple: true, type: 'file', class: 'form-control' %>

    <div class="mt-5">
      <% if defect.videos? %>
        <%= video_tag(defect.videos, width: '340', height: '180', controls: true, class: 'rounded card p-1 shadow mx-auto mb-5') %>
      <% end %>
    </div>
  </div>

  <div class="mt-5 mb-3">
    <%= form.submit class: 'btn btn-sm btn-success' %>
  </div>
<% end %>
