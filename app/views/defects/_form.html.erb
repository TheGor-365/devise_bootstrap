<%= form_with(model: defect) do |form| %>

  <% if defect.errors.any? %>
    <div id="error_explanation" class="danger">
      <h5><%= pluralize(defect.errors.count, "error") %> prohibited this defect from being saved:</h5>
      <ul>
        <% defect.errors.each do |error| %>
          <li><small><%= error.full_message %></small></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :type %>
    <%= form.text_field :type, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <div class="mb-3">
      <%= form.label :images, class: 'form-label mb-3' %><br>
      <%= form.file_field :images, type: 'file', multiple: true, class: 'form-control' %>
      <%= form.hidden_field :avatar_cache %>
    </div>

    <div class="mt-3 mb-3">
      <%= image_tag(defect.images.url, width: '200') if defect.images? %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :videos %>
    <%= form.text_area :videos, class: 'form-control' %>
  </div>

  <div class="mt-3 mb-3">
    <%= form.submit class: 'btn btn-sm btn-success' %>
  </div>
<% end %>
